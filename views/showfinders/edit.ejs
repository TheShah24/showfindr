<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= showfinder.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/showfinders/<%= showfinder._id %>?_method=PUT" method="POST" id="blah">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="showfinder[name]" value = "<%= showfinder.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="showfinder[price]" value="<%= showfinder.price %>" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="showfinder[image]" value = "<%= showfinder.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea rows="4" form="blah" class="form-control" type="text" name="showfinder[description]" value="<%=showfinder.description%>"></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= showfinder.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/showfinders">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>