    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% showfinders.forEach(function(showfinder){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= showfinder.image %>">
                    <div class="caption">
                        <h4><%= showfinder.name %></h4>
                    </div>
                    <p>
                        <a href="/showfinders/<%= showfinder._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>


