<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/showfinders/<%= showfinder_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" id = "editcomment">
                <div class="form-group">
                    <textarea rows="4" form="editcomment" class="form-control" type="text" name="comment[text]" value ="<%= comment.text %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/showfinders">Go Back</a>
        </div>
    </div>

